@using CostPilot.ViewModels.CostCurrency
@model CostCurrencyEditInputModel

@{
    ViewData["Title"] = "Edit Cost Currency";
}

<h2 class="text-center">@ViewData["Title"]</h2>
<hr />

<div asp-validation-summary="ModelOnly" class="validation-summary-errors text-danger text-center"></div>

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-controller="CostCurrency" asp-action="Edit" method="post">
            <input type="hidden" asp-for="@Model.Id" />

            <div class="mb-2">
                <label asp-for="@Model.Code" class="form-label-add-edit">Code</label>
                <input asp-for="@Model.Code" class="form-control" aria-required="true" placeholder="Please enter cost currency code" />
                <span asp-validation-for="@Model.Code" class="text-danger"></span>
            </div>

            <div class="mb-2">
                <button class="btn btn-success btn-dark-text w-100 py-2 fw-bold rounded" type="submit">
                    <i class="fas fa-save"></i> Update
                </button>
            </div>
        </form>

        <div class="mb-2">
            <a asp-controller="CostCurrency" asp-action="Index" class="btn btn-secondary btn-dark-text w-100 py-2 fw-bold rounded">
                <i class="fa-solid fa-xmark"></i> Cancel
            </a>
        </div>
    </div>
</div>
