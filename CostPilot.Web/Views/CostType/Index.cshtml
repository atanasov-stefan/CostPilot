@using CostPilot.ViewModels.CostType
@model IEnumerable<CostTypeIndexViewModel>

@{
    ViewData["Title"] = "Cost Types";
}

<h2 class="text-center">@ViewData["Title"]</h2>

<p class="text-center">
    <a asp-controller="CostType" asp-action="Create" class="btn btn-success">Create New Cost Type</a>
</p>
<hr />

@if (Model == null || Model.Any() == false)
{
    <div class="text-center mt-5">
        <h4>You don't have any cost types assigned yet!</h4>
        <p class="text-muted">Start creating and save your cost types.</p>
    </div>
}
else
{
    <div class="table-responsive" style="max-height: 400px; overflow-y: auto;">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th style="position: sticky; top: 0; background-color: darkslategrey; z-index: 1;">Code</th>
                    <th style="position: sticky; top: 0; background-color: darkslategrey; z-index: 1;">Description</th>
                    <th style="position: sticky; top: 0; background-color: darkslategrey; z-index: 1;">Obsolete</th>
                    <th style="position: sticky; top: 0; background-color: darkslategrey; z-index: 1;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var costType in Model)
                {
                    <tr>
                        <td>@costType.Code</td>
                        <td>@costType.Description</td>
                        <td>@costType.IsObsolete</td>
                        <td>
                            <a asp-controller="CostType" asp-action="Edit" asp-route-id="@costType.Id" class="btn btn-sm btn-primary">Edit</a>
                            <a asp-controller="CostType" asp-action="Disable" asp-route-id="@costType.Id" class="btn btn-sm btn-danger">Disable</a>
                            <a asp-controller="CostType" asp-action="Enable" asp-route-id="@costType.Id" class="btn btn-sm btn-light">Enable</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}