@using CostPilot.ViewModels.CostType
@model CostTypeEditInputModel

@{
    ViewData["Title"] = "Edit Cost Type";
}

<h2 class="text-center">@ViewData["Title"]</h2>
<hr />

<div asp-validation-summary="ModelOnly" class="validation-summary-errors text-danger text-center"></div>

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-controller="CostType" asp-action="Edit" method="post">
            <input type="hidden" asp-for="@Model.Id" />

            <div class="mb-2">
                <label asp-for="@Model.Description" class="form-label-add-edit">Description</label>
                <textarea asp-for="@Model.Description" class="form-control" aria-required="true" rows="3" placeholder="Please enter cost type description"></textarea>
                <span asp-validation-for="@Model.Description" class="text-danger"></span>
            </div>

            <div class="mb-2">
                <button class="btn btn-success btn-dark-text w-100 py-2 fw-bold rounded" type="submit">
                    <i class="fas fa-save"></i>Update
                </button>
            </div>
        </form>

        <div class="mb-2">
            <a asp-controller="CostType" asp-action="Index" class="btn btn-secondary btn-dark-text w-100 py-2 fw-bold rounded">Cancel</a>
        </div>
    </div>
</div>
