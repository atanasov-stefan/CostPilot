@using CostPilot.ViewModels.CostCenter
@model CostCenterCreateInputModel

@{
    ViewData["Title"] = "Create New Cost Center";
}

<h2 class="text-center">@ViewData["Title"]</h2>
<hr />

<div asp-validation-summary="ModelOnly" class="validation-summary-errors text-danger text-center"></div>

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-controller="CostCenter" asp-action="Create" method="post">
            <div class="mb-2">
                <label asp-for="@Model.Code" class="form-label-add-edit">Code</label>
                <input asp-for="@Model.Code" class="form-control" aria-required="true" placeholder="Please enter cost center code" />
                <span asp-validation-for="@Model.Code" class="text-danger"></span>
            </div>

            <div class="mb-2">
                <label asp-for="@Model.Description" class="form-label-add-edit">Description</label>
                <textarea asp-for="@Model.Description" class="form-control" aria-required="true" rows="3" placeholder="Please enter cost center description"></textarea>
                <span asp-validation-for="@Model.Description" class="text-danger"></span>
            </div>

            <div class="mb-2">
                <label asp-for="@Model.OwnerId" class="form-label-add-edit">Owner</label>
                <select asp-for="@Model.OwnerId" class="form-control" aria-required="true" asp-items="@(new SelectList(Model.Owners, "Id", "FullName"))">
                    <option value="">...</option>
                </select>
                <span asp-validation-for="@Model.OwnerId" class="text-danger"></span>
            </div>

            <div class="mb-2">
                <button class="btn btn-success btn-dark-text w-100 py-2 fw-bold rounded" type="submit">
                    <i class="fas fa-save"></i> Save
                </button>
            </div>
        </form>

        <div class="mb-2">
            <a asp-controller="CostCenter" asp-action="Index" class="btn btn-secondary btn-dark-text w-100 py-2 fw-bold rounded">
                <i class="fa-solid fa-xmark"></i> Cancel
            </a>
        </div>
    </div>
</div>